<%-  include('./partials/_header.ejs')  %>



<div class="container">
    <div class="row mt-2" >
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th style='font-size: 10px;'>nÂº</th>
                        <th style='font-size: 10px;'>Name</th>
                        <th style='font-size: 10px;'>Address</th>
                        <th style='font-size: 10px;'>Phone</th>
                        <th style='font-size: 10px;'>Nationality</th>
                        <th style='font-size: 10px;'>Email</th>
                        <th style='font-size: 10px;'>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) {  %> 
                        <% for (var i = 0; i< data.length; i++) { %>
                            <tr>
                                <td style='font-size: 10px;'><%= data[i].id %> </td>
                                <td style='font-size: 10px;'><%= data[i].name %> </td>
                                <td style='font-size: 10px;'><%= data[i].address %> </td>
                                <td style='font-size: 10px;'><%= data[i].phone %> </td>
                                <td style='font-size: 10px;'><%= data[i].nationality %> </td>
                                <td style='font-size: 10px;'><%= data[i].email %> </td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>"  class="btn btn-danger" style='font-size: 7px;'>Delete</a>
                                    <a href="/update/<%= data[i].id %>"  class="btn btn-info" style='font-size: 7px;'>Update</a>
                                </td>
                                
                            </tr>
                        <% } %> 
                    <% } %> 
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post" >
                        <div class="form-group mt-1">
                            <input type="text" name="name" placeholder="Name" class="form-control" style='font-size: 12px;'>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="address" placeholder="Address" class="form-control" style='font-size: 12px;'>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="phone" placeholder="Phone" class="form-control" style='font-size: 12px;' >
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="nationality" placeholder="Nationality" class="form-control" style='font-size: 12px;'>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="email" placeholder="Email" class="form-control" style='font-size: 12px;'>
                        </div>
                        <button type="submit" class="btn btn-primary"> Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/_footer.ejs') %>